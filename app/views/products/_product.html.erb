<div id="<%= dom_id product %>" class="my-5">
  <div class="flex flex-wrap products-baseline justify-between gap-y-2">
    <div>
      <h2 class="font-bold text-2xl">
        <%= link_to product.name, product %>
        <span class="text-sm bg-gray-200 rounded px-2 py-1 ml-2"><%= product.type_name %></span>
      </h2>
      <small class="text-gray-500">
        <%= product.kind_name if product.respond_to?(:kind_name) %>
        <%= product.brand.name if product.brand %>
      </small>
    </div>
    <div class="flex products-baseline gap-x-4">
      <% if product.respond_to?(:pack_name) %>
        <span><%= product.pack_name %></span>
      <% end %>
      <% if product.drink? %>
        <span><%= product.size %>ml</span>
        <span><%= product.acl %>%</span>
      <% elsif product.food? %>
        <span><%= product.size %>g</span>
      <% end %>
    </div>
  </div>
</div>