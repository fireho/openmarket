<% content_for :title, "Showing drink" %>
<div class="w-full">
  <h1 class="font-bold text-4xl">
    <%= icon("drinks", size: 42) %>
    <%= @drink.name %>
  </h1>
  <%= btn_new new_drink_path, "BOTAO SOH PARA SAFADAS CRIAREM NOVA BEBIDA" %>
  <%= btn_edit edit_drink_path(@drink) %>
  <div id="<%= dom_id @drink %>" class="w-full sm:w-auto my-5 space-y-5">
    <div>
      <strong class="block font-medium mb-1"><%= Drink.human_attribute_name("name") %>:</strong>
      <%= @drink.name %>
    </div>
    <div>
      <strong class="block font-medium mb-1"><%= Drink.human_attribute_name("code") %>:</strong>
      <%= @drink.code %>
    </div>
    <div>
      <strong class="block font-medium mb-1"><%= Drink.human_attribute_name("brand") %>:</strong>
      <%= @drink.brand %>
    </div>
    <div>
      <strong class="block font-medium mb-1"><%= Drink.human_attribute_name("kind") %>:</strong>
      <%= @drink.kind_name %>
    </div>
    <div>
      <strong class="block font-medium mb-1"><%= Drink.human_attribute_name("pack") %>:</strong>
      <%= @drink.pack_name %>
    </div>
    <div class="flex space-x-4">
      <div class="w-1/2">
        <strong class="block font-medium mb-1"><%= Drink.human_attribute_name("size") %>:</strong>
        <%= @drink.size %>
      </div>
      <div class="w-1/2">
        <strong class="block font-medium mb-1"><%= Drink.human_attribute_name("acl") %>:</strong>
        <%= @drink.acl %>
      </div>
    </div>
  </div>
  <%= btn_back drinks_path %>
  <%= btn_destroy @drink %>
</div>
