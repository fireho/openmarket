<% content_for :title, "Items" %>
<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">
      <%= icon("items", size: 42) %>
      Itens
    </h1>
    <div class="flex space-x-2">
      <%= link_to "Nova Bebida", new_item_path(type: 'Drink'), class: "btn btn-primary", data: { turbo_frame: "modal" } %>
      <%= link_to "Nova Comida", new_item_path(type: 'Food'), class: "btn btn-secondary", data: { turbo_frame: "modal" } %>
    </div>
  </div>
  <%= form_with url: items_path, method: :get, class: "mb-4" do |form| %>
    <div class="flex">
      <%= form.text_field :search, value: params[:search], class: "w-full rounded-md border-yellow-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      <%= form.submit "Procurar", class: "ml-2 px-4 py-2 bg-gray-600 text-white rounded-md" %>
    </div>
  <% end %>
  <div id="items" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @items.any? %>
      <% @items.each do |item| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <div id="<%= dom_id item %>" class="w-full sm:w-auto my-5">
            <div class="flex flex-wrap items-baseline justify-between gap-y-2">
              <div>
                <h2 class="font-bold text-2xl">
                  <%= link_to item.name, item %>
                  <span class="text-sm bg-gray-200 rounded px-2 py-1 ml-2"><%= item.type_name %></span>
                </h2>
                <small class="text-gray-500">
                  <%= item.kind_name if item.respond_to?(:kind_name) %>
                  <%= item.brand.name if item.brand %>
                </small>
              </div>
              <div class="flex items-baseline gap-x-4">
                <% if item.respond_to?(:pack_name) %>
                  <span><%= item.pack_name %></span>
                <% end %>
                <% if item.drink? %>
                  <span><%= item.size %>ml</span>
                  <span><%= item.acl %>%</span>
                <% elsif item.food? %>
                  <span><%= item.size %>g</span>
                <% end %>
              </div>
            </div>
          </div>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Editar", edit_item_path(item), class: "btn btn-outline" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">Nenhum item encontrado...</p>
    <% end %>
  </div>
  <div class="mt-4">
    <%== pagy_nav(@pagy) if defined?(pagy_nav) %>
  </div>
  <div class="mt-4">
    <p class="text-gray-500 text-sm">
      Total de itens: <%= Item.count %>
      (Bebidas: <%= Drink.count %>,
      Comidas: <%= Food.count %>)
    </p>
  </div>
</div>